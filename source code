#Stationary Store Inventory
Inventory = {101:{"name":"notebook", "price":300,"stock":75},102:{"name":"Pencil box","price":80,"stock":40}, 103:{"name":"paint brush","price":20,"stock":65}, 104:{"name":"pencils", "price":10}, 105:{"name":"eraser", "price":5}, 106:{"name":"sharpener", "price": 10}}
#A loop to bring up the menu again after the operation is performed till the user decides to end the program.
end=False
while(end==False):
    #The choice to select the operation to be performed
    print("Press 1 to Add a new stationary item")
    print("Press 2 to Check item Availablity.")
    print("Press 3 to Retrieve an item's Price.")
    print("Press 4 to Update the stock of an item.")
    print("Press 5 to Remove an item.")
    print("Press 6 to List all items with details")
    print("Press 7 to Clear the inventory.")
    print("Press 0 to Exit")
    choice=int(input("Select the operation to be performed:"))
    print("\n")
    if(choice==0):
        end=True
        print("The program will now terminate.")
    elif(choice==1):
        Stationary_id_id=int(input("Enter new Stationary ID:"))
        name=input("Enter stationary item:")
        price=float(input("Enter item Price:"))
        stock = int(input("Enter stock quantity:"))
        Inventory[Stationary_id_id]={"name":name,"price":price,"stock":stock}
        print("\nUpdated Inventory:")
        print(Inventory)
        print("\n")
    elif(choice==2):
        Stationary_id_id=int(input("Enter stationary id to check:"))
        if Stationary_id_id in Inventory:
            print("Item Available:",Inventory[Stationary_id_id]["name"])
        else:
            print("Item not found.")
        print("\n")
    elif(choice==3):
        Stationary_id_id=int(input("Enter item ID:"))
        if Stationary_id_id in Inventory:
            print("Price:",Inventory[Stationary_id_id]["price"])
        else:
            print("Item ID not found.")
        print("\n")
    elif(choice==4):
        Stationary_id_id=int(input("Enter Item ID:"))
        if Stationary_id_id in Inventory:
            print("1. Increase Stock.")
            print("2. Decrease Stock.")
            opt = int(input("Enter choice"))
            qty = int(input("Enter Quantity:"))
            if(opt==1):
                Inventory[Stationary_id_id]["stock"]+=qty
                print("Updated Stock:",Inventory[Stationary_id_id]["stock"])
            elif(opt==2):
                Inventory[Stationary_id_id]["stock"]-=qty
                print("Updated Stock:",Inventory[Stationary_id_id]["stock"])
        else:
            print("Item not found.")
        print("\n")
    elif(choice==5):
        Stationary_id_id=int(input("Enter item ID to remove:"))
        if Inventory.pop(Stationary_id_id,None):
            print("Item removed successfully.")
        else:
            print("Item ID not found.")
        print("\nUpdated Inventory:")
        print(Inventory)
        print("\n")
    elif(choice==6):
        print("\nAll Items in inventory:")
        for t_id,details in Inventory.items():
            print(t_id,":",details)
        print("\n")
    elif(choice==7):
        Inventory.clear()
        print("Inventory Cleared.")
        print(Inventory)
        print("\n")
